                                        <Label FontSize="Caption" Text="{Binding Path=CategoryName}"></Label>
                                        <Label Grid.Row="1" FontSize="Subtitle" Text="{Binding Path=fullAddress}"></Label>

                                        <Grid  Grid.Row="2" >
                                            <Image HeightRequest="330" x:Name="backgroundImage" Source="{Binding Path=photoUrl}" AbsoluteLayout.LayoutBounds="0,0,1,1"   AbsoluteLayout.LayoutFlags="All" />
