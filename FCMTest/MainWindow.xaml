<Window x:Class="FCMTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FCMTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Stretch" Height="100"  VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="63*"/>
                <ColumnDefinition Width="521*"/>
                <ColumnDefinition Width="84*"/>
            </Grid.ColumnDefinitions>
            <TextBox x:Name="textBox" TextWrapping="NoWrap" HorizontalAlignment="Stretch" Text="{Binding DeviceID}" Height="24"  Margin="10,38"  VerticalAlignment="Center"  Grid.Column="1">
            </TextBox>
            <TextBlock x:Name="textBlock" HorizontalAlignment="Right"  Margin="0,42,10,42" TextWrapping="Wrap" Text="Device" VerticalAlignment="Center" Height="16" Width="39"/>
            <Button x:Name="SendBtn" Content="Send" Grid.Column="2" HorizontalAlignment="Left" Margin="10,40,0,40" VerticalAlignment="Center" Width="38" Click="SendBtn_Click" />
        </Grid>

    </Grid>
</Window>
